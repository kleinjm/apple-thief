= simple_form_for @bag do |f|
  - if @bag.errors.any?
    #error_explanation
      %h2
        = pluralize(@bag.errors.count, "error")
        prohibited this bag from being saved:
      %ul
        - @bag.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.input :description, :as => :text, :input_html => { 'rows' => 5 }
  = f.input :capacity, placeholder: "60", input_html: { class: "half-width" }
  = f.input :photo_url, placeholder: "http://images.server.com/duffle.jpg"
  %hr.invisible
  .row
    .col-md-4.col-md-offset-4
      = link_to 'Back', bags_path, class: "btn btn-danger float-left"
      = f.submit "Save", class: "btn btn-primary float-right"